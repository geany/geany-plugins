			"devhelp/dh-keyword-model.c",
			"devhelp/dh-link.c",
			"devhelp/dh-marshal.c",
			"devhelp/dh-parser.c",
			"devhelp/dh-preferences.c",
			"devhelp/dh-search.c",
			"devhelp/dh-util.c",
			"devhelp/dh-window.c",
			"devhelp/eggfindbar.c",
			"devhelp/ige-conf.c",
			"devhelp/ige-conf-gconf.c",
			"src/dhp-manpages.c",
			"src/dhp-object.c",
			"src/dhp-plugin.c" ]

