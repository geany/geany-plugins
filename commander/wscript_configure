from build.wafutils import check_cfg_cached


conf.load ('glib2')

packages = [
    ('gtk+-2.0', '2.16', 'GTK'),
    ('glib-2.0', '2.16', 'GLIB'),
]

for package_name, package_version, uselib_store in packages:
    check_cfg_cached(conf,
                     package=package_name,
                     atleast_version=package_version,
                     uselib_store=uselib_store,
                     mandatory=True,
                     args='--cflags --libs')
