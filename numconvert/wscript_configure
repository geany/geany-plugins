from build.wafutils import check_cfg_cached

conf.load('vala', funs='')
conf.check_vala(min_version=(0,12,0))

packages = [('gtk+-2.0', 'GTK'),
            ('glib-2.0', 'GLIB'),
            ('geany', 'GEANY')]

for pkg, var in packages:
    check_cfg_cached(conf, package=pkg, uselib_store=var, args='--cflags --libs')
